{
  "name": "rusheet",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run build:wasm && vite build",
    "build:wasm": "wasm-pack build crates/rusheet-wasm --target web --out-dir ../../pkg",
    "preview": "vite preview",
    "test": "vitest run",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run --config vite.config.browser.ts",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:rust": "cargo test --all",
    "test:all": "pnpm run test:rust && pnpm test:unit && pnpm test:integration"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.0.11",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/ui": "^4.0.0",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "typescript": "^5.3.0",
    "vite": "^6.4.1",
    "vite-plugin-top-level-await": "^1.4.0",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^4.0.16"
  }
}
